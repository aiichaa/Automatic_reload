<body class="hold-transition login-page">
<div class="login-box">
    <div class="login-logo">
        <a href="#"><b>GED CGI</b></a>
    </div>
    <!-- /.login-logo -->
    <div class="login-box-body">
        {#<p class="login-box-msg">Identification</p>#}

        <form action="{{ path('login_check') }}" method="post">
            <div class="form-group has-feedback">
                <input class="form-control" placeholder="Nom d'utilisateur " id="username" name="_username" value="{{ last_username }}" >
                <span class="glyphicon glyphicon-user form-control-feedback"></span>
            </div>
            <div class="form-group has-feedback">
                <input type="password" class="form-control" placeholder="Mot de passe" id="password" name="_password" data-toggle="password" data-placement="before">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="row">
                <div class="col-xs-4">
                    <button type="submit" class="btn btn-primary btn-block btn-flat">Valider</button>
                </div>
            </div>
        </form>
    </div>
    <!-- /.login-box-body -->




    {% block javascripts %}



        <script src="{{ asset('js/bootstrap-show-password.js') }}"></script>
        <script>
            $(function () {
                $('input').iCheck({
                    checkboxClass: 'icheckbox_square-blue',
                    radioClass: 'iradio_square-blue',
                    increaseArea: '20%' // optional
                });

                $('#password').password().on('show.bs.password',function (e) {
                    $('#eventLog').text('On show event');
                    $('#methods').prop('checked', true);
                }).on('hide.bs.password', function (e) {
                    $('#eventLog').text('On hide event');
                    $('#methods').prop('checked', false);
                });
                $('#methods').click(function () {
                    $('#password').password('toggle');
                });
            });
        </script>


    {% endblock %}

</body>
</html>